vcl 4.0;
import std;
import directors;
<% @backend_hosts.each do |name, host| %>
backend <%= name %> {
  .host = "<%= host.split(':')[0] %>";
  .port = "<%= host.split(':')[1] %>";
  .probe = {
    .url = "<%= @probe_url %>";
  }
}
<% end %>
sub vcl_init {
    new <%= @endpoint_name %> = directors.round_robin();
<% @backend_hosts.each_key do |name| %>
    <%= @endpoint_name %>.add_backend(<%= name %>);
<% end %>
}
sub vcl_recv {
   set req.backend_hint = <%= @endpoint_name %>.backend();
}
